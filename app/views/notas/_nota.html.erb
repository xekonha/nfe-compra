<p id="notice"><%= notice %></p>
<h1>Notas Fiscais</h1>
<h2>
Escolher período de busca: <!-- implementar calendário com início e fim de período -->
</h2>

<table>
  <thead>
    <tr>
      <th>Emissão</th>
      <th>CNPJ Fornecedor</th>
      <th>Nome do Fornecedor</th>
      <th>Descrição da CFOP</th>
      <th>Número da Nota</th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th><%=nota.emissao%></th>
      <th><%=nota.emitente%></th>
      <th><%=nota.nome_emitente%></th>
      <th><%=nota.descricao_cfop%></th>
      <th><%=nota.numero_nota%></th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th>Chave NFe</th>
      <th><%=nota.chave%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <%#= Aqui estamos utilizando o email do usuário para demonstração %>
        <%#= Ao inves de vermos o user_id veremos o email do user %>
        <td><%= restaurant.user.email %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <% if policy(restaurant).edit? %>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <% end %>
        <% if policy(restaurant).destroy? %>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(Restaurant).new? %>
  <%= link_to 'New Restaurant', new_restaurant_path %>
<% end %>
