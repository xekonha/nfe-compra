<h1>Notas Fiscais</h1>
<div class="br-table" data-search data-selection>
  <!-- Header da Tabela -->
  <div class="table-header">
    <!-- Barra de Título -->
    <div class="top-bar"></div>
    <!-- Barra de Busca -->
    <div class="search-bar"></div>
    <!-- Barra de Seleção -->
    <div data-controller="nota">
      <%= simple_form_for(@notas) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-inputs m-1">
        <%= f.input :periodo_inicial, as: :date, html5: true, label: "Período Inicial",
          input_html: {data: {'nota-target': 'periodoInicial'}, onkeydown: "return false" } %>
        <%= f.input :periodo_final, as: :date, html5: true, label: "Período Final",
          input_html: {data: {'nota-target': 'periodoFinal'}, onkeydown: "return false" }  %>
      </div>
    <div id="periodoInvalido" class="invalid-feedback m-3">Favor verificar as datas informadas.</div>
      <button type="button" class="br-button primary ml-sm-2" data-action="click->nota#index">Pesquisar</button>
      <div class="br-modal-footer justify-content-center">
        <%= f.button :submit, 'Pesquisar', class: "br-button primary small m-2" %>
      </div>
