<div class="container d-flex">
  <div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs pt-5">
        <%= f.input :cpf,
                    label: 'CPF',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "CPF" } %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn btn-primary btn-lg rounded active btn-block">
        <%= f.button :submit, "Entrar", class: 'text-white font-weight-bold'%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class='w-75'>
    <%= image_tag 'Cartão de crédito.gif' %>
  </div>
</div>
